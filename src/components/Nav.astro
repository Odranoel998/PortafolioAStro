---
const navItems = [
  {
    title: "Home",
    label: "Home",
    url: "/#Home",
  },
  {
    title: "About Us",
    label: "About Us",
    url: "/#About",
  },
  {
    title: "Services",
    label: "Services",
    url: "/#Services",
  },
];
---

<header>
  <nav class="flex flex-row">
    <img
      src="/images/iconoMigratev2.webp"
      alt="MigrateSolutions"
      class="w-20 h-10 px-10"
      loading="lazy"
    />
    <div class="divButton">
      {
        navItems.map((link) => (
          <a class="aButton" aria-label={link.label} href={link.url}>
            {link.title}
          </a>
        ))
      }
    </div>
  </nav>
</header>

<style>
  header {
    position: fixed;
    top: 0;
    z-index: 20;
    width: 100%;
  }
  .divButton {
    width: 100%;
    display: flex;
    justify-content: center;
  }
  img {
    padding-right: 10%;
  }
  .aButton {
    margin: 1%;
    margin-right: 3%;
    padding: 0.3%;
    cursor: pointer;
    background: linear-gradient(to bottom right, #009ca3, #00375f);
    border-radius: 0.5rem;
    border: 1px solid rgba(255, 255, 255, 0.5);
    box-shadow:
      0 4px 6px -1px rgba(16, 185, 129, 0.3),
      0 2px 4px -1px rgba(16, 185, 129, 0.3);
    transition:
      background-color 0.3s ease,
      transform 0.3s ease;
  }
  .aButton:hover {
    filter: drop-shadow(0 1px 1px rgba(0, 0, 0, 0.05))
      drop-shadow(0 1px 2px rgba(0, 0, 0, 0.1));
    box-shadow: 0 0 2px 0 rgba(0, 0, 0, 1);
    color: #ffffff;
  }
  nav {
    background-image: linear-gradient(to bottom left, #00375f, #045996);
    padding: 1%;
    padding-right: 10%;
    border-bottom-right-radius: 50%;
  }
  @media (max-width: 570px) {
    .divButton {
      margin-top: 2%;
      margin-left: -15%;
      width: 100%;
      display: flex;
      justify-content: center;
    }
    img {
      margin-top: 1%;
      width: 35%;
      height: 32%;
    }
    .aButton {
      margin: 1%;
      margin-right: 5%;
      font-size: 10px;
      padding: 1%;
      cursor: pointer;
      transition:
        background-color 0.3s ease,
        transform 0.3s ease;
    }
    .aButton:hover {
      background-color: #00375f;
      transform: scale(1.05);
      padding: 0.5%;
      border-radius: 5px;
    }
  }
</style>
